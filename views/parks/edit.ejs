<%- include("../partials/header") %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= park.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/parks/<%=park._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="park[name]" id="name" value="<%= park.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="park[image]" id="image"  value="<%= park.image %>" required>
					<!-- pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." -->
                    <!-- <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small> -->
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="park[price]" id="price" value="<%= park.price %>" step="0.01" min="0" required>
                </div>
				
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="park[location]" id="location" value="<%= park.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="park[description]" id="description" value="<%= park.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>
<%- include("../partials/footer") %>
